<root translate="accordionmenu">
    <params label="MijoShop_menu_properties">
        <param type="mijoshopmenuitems" name="root" default="1" label="Menu_root" multiple="1" size="10" description="If_you_select_only_one_category_only__" />
        <param name="rootasitem" type="onoff" default="0" label="Singe_root_as_menuitem" description="If_enabled_and_one_selected_in_the_previous__"/>
        <param name="showproducts" type="onoff" default="0" label="Show_products" description="If_enabled_products_are_included_in_the_menu"/>
        <param name="displaynum" type="radio" default="0" label="Display_number_of_products" description="Display_the_product_count__">
            <option value="0">o</option>
            <option value="1">Yes_the_real_count</option>
            <option value="2">Yes_the_aggregated_count</option>
        </param>
        <param name="emptycategory" type="onoff" default="1" label="Show_empty_categories" />
        <param name="category_order" type="mixed" label="Category order" default="name|*|ASC">
            <param type="list" label="Field">
                <option value="name">Name</option>
                <option value="sort_order">Ordering</option>
                <option value="date_added">Creation time</option>
                <option value="date_modified">Modification time</option>
            </param>
            <param type="radio" label="order">
                <option value="ASC">Ascending</option>
                <option value="DESC">Descending</option>
            </param>
        </param>
        <param name="product_order" type="mixed" label="Product order" default="name|*|ASC">
            <param type="list" label="Field">
                <option value="name">Name</option>
                <option value="sort_order">Ordering</option>
                <option value="viewed">Viewed</option>
                <option value="price">Price</option>
                <option value="date_added">Creation time</option>
                <option value="date_modified">Modification time</option>
            </param>
            <param type="radio" label="order">
                <option value="ASC">Ascending</option>
                <option value="DESC">Descending</option>
            </param>
        </param>
        <param name="menuicons" type="mixed" label="Menu_icons" default="0|*|0|*|0" description="If_enabled_the_menu_will_look_for_icons_in_the_description_of_the_category_and_the_first_image_will_be_used">
            <param type="onoff" label="Show"/>
            <param type="radio" label="Alignment">
                <option value="0">Left</option>
                <option value="1">Right</option>
            </param>
            <param type="onoff" label="Only_icon" />
        </param>
        <param name="mijocache" type="mixed" label="Caching" default="1|*|300000" description="MijoShop_isnt_well_optimized_and_it_can_result_a_huge_loding_time_with_the_url_generation_for_menu_items_Enable_this_parameter_and_use_a_huge_cache_lifetime">
            <param type="onoff" label="Caching"/>
            <param type="text" label="Lifetime">
              <unit>min</unit>
            </param>
        </param>
    </params>
</root>