<root translate="accordionmenu">
    <params label="Virtuemart_menu_properties">
        <param type="virtuemartmenuitems" name="root" default="0" label="Menu_root" multiple="1" size="10"
               description="If_you_select_only_one_category_only__"/>
        <param name="rootasitem" type="onoff" default="0" label="Singe_root_as_menuitem"
               description="If_enabled_and_one_selected_in_the_previous__"/>
        <param type="virtuemartmenuitems" name="blacklist" noroot="1" default="" label="Blacklist_menu_items"
               multiple="1" size="10"
               description="The_selected_categories_and_its_descendants_wont_be_included_in_menu_tree"/>
        <param name="showproducts" type="onoff" default="0" label="Show_products"
               description="If_enabled_products_are_included_in_the_menu"/>
        <param name="displaynum" type="radio" default="0" label="Display_number_of_products"
               description="Display_the_product_count__">
            <option value="0">No</option>
            <option value="1">Yes_the_real_count</option>
            <option value="2">Yes_the_aggregated_count</option>
        </param>
        <param name="emptycategory" type="onoff" default="1" label="Show_empty_categories"/>
        <param name="order" type="radio" label="Order" default="0">
            <option value="0">Components_default</option>
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </param>
        <param name="productorder" type="list" label="Product_order" default="0" translateable="1">
            <option value="0">No_order</option>
            <option value="ordering">Ordering</option>
            <option value="created_on_asc">Created_on_ascending</option>
            <option value="created_on_desc">Created_on_descending</option>
        </param>
        <param name="menuicons" type="mixed" label="Menu_icons" default="0|*|0|*|0"
               description="If_enabled_the_menu_will_add_the_specified_image_from_the_menu_item">
            <param type="onoff" label="Show"/>
            <param type="radio" label="Alignment">
                <option value="0">Left</option>
                <option value="1">Right</option>
            </param>
            <param type="onoff" label="Only_icon"/>
        </param>
        <param name="itemid" type="text" default="0" label="Itemid" description="Not_used_if_empty"/>
    </params>
    <params label="Virtuemart_1x_properties" name="virtuemart1">
        <param name="sess" type="onoff" default="1" label="Virtuemart_router_disable_for_speed" description=""/>
    </params>
</root>